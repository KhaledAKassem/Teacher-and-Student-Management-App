<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="medic.esy.es">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".fireapp"
        android:icon="@mipmap/student"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".student"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".teacher" />
        <activity android:name=".StudentProfile" />
        <activity android:name=".signup_student" />
        <activity android:name=".signup_teacher" />
        <activity
            android:name=".DoctorProfile"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCourse"
            android:label="@string/title_activity_add_course"
            android:parentActivityName=".DoctorProfile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medic.esy.es.DoctorProfile" />
        </activity>
        <activity
            android:name=".UpdateCourse"
            android:label="@string/title_activity_update_course"
            android:parentActivityName=".DoctorProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeleteCourse"
            android:label="@string/title_activity_delete_course"
            android:parentActivityName=".DoctorProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".uploadAssignment" />
        <activity android:name=".AddNewStudent" />
        <activity
            android:name=".DoctorCourses"
            android:parentActivityName=".DoctorProfile" />
        <activity android:name=".student_update_data" />
        <activity android:name=".AddTask" />
        <activity android:name=".StartTask" />
        <activity android:name=".AddCourses" />
        <activity android:name=".GetCourses" />
        <activity android:name=".update_doctor_data"></activity>
        <activity android:name=".GetCoursesForStudent"></activity>
    </application>

</manifest>