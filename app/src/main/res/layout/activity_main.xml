<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/review"
        >

        <TextView
            android:text="Welcome to Electronic Assignment"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/textView"
            android:textColor="#FFFF"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="normal|bold|italic"
            android:textSize="20dp"
            android:textColorLink="?attr/textColorAlertDialogListItem"
            android:background="@drawable/univ"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="390dp">

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Be connected with  Your Teachers"
            android:gravity="center"
            android:lines="2"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:paddingBottom="31dp"


            android:layout_marginTop="20dp"
             />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >


            <customfonts.MyTextView
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/student"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="#fff"
                android:background="@drawable/rect"
                android:padding="20dp"
                android:gravity="center"
                />


            <customfonts.MyTextView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/teacher"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:textColor="#fff"
                android:background="@drawable/rect2"
                android:padding="20dp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



