<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_above="@+id/linear3"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">


        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


        </LinearLayout>


        <customfonts.MyTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect1"
            android:text="Sign up"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="11dp"
            android:elevation="3dp"
            android:id="@+id/signup_t_signup" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >
    </LinearLayout>

    <customfonts.MyTextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher Signup"
        android:textColor="#4c565f"
        android:textSize="29dp"
        android:gravity="center"

        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic"
        android:paddingTop="60dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/two"
        android:scaleType="centerCrop"

        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <customfonts.MyEditText

        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Name"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:maxLength="30"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"


        android:id="@+id/address_t_signup"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/pass_t_sign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <customfonts.MyEditText

        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your number"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:maxLength="30"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"


        android:id="@+id/number_t_signup"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <customfonts.MyEditText

        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:background="#0000"
        android:padding="16dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="12dp"


        android:textStyle="normal|bold|italic"
        android:id="@+id/pass_t_sign"
        android:layout_below="@+id/number_t_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <customfonts.MyEditText

        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        android:maxLength="30"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"


        android:id="@+id/email_t_signup"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
